<Application x:Class="ResolutionsFlow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:markup="clr-namespace:Wpf.Ui.Markup;assembly=Wpf.Ui"
             xmlns:pvm="clr-namespace:ResolutionsFlow.Presentation.ViewModels.Pages"
             xmlns:v="clr-namespace:ResolutionsFlow.Presentation.Pages">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <markup:ThemesDictionary Theme="Light" />
                <markup:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- VM -> View -->
            <DataTemplate DataType="{x:Type pvm:DashboardViewModel}">
                <v:DashboardView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type pvm:DocumentsViewModel}">
                <v:DocumentsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type pvm:SettingsViewModel}">
                <v:SettingsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type pvm:AboutViewModel}">
                <v:AboutView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
