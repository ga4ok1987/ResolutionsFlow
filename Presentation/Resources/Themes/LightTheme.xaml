<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AppBg">#FFFFFF</Color>
    <Color x:Key="AppFg">#111111</Color>
    <Color x:Key="PanelBg">#F3F3F3</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBg}"/>
    <SolidColorBrush x:Key="AppForegroundBrush" Color="{StaticResource AppFg}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBg}"/>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="MinWidth" Value="140"/>
    </Style>
</ResourceDictionary>
