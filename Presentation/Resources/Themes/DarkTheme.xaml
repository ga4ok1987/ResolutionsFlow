<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Color x:Key="AppBg">#1E1E1E</Color>
    <Color x:Key="AppFg">#FFFFFF</Color>
    <Color x:Key="PanelBg">#2A2A2A</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBg}"/>
    <SolidColorBrush x:Key="AppForegroundBrush" Color="{StaticResource AppFg}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBg}"/>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="MinWidth" Value="140"/>
    </Style>
</ResourceDictionary>
