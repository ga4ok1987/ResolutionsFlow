<ui:FluentWindow x:Class="ResolutionsFlow.Presentation.Views.ShellWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:loc="clr-namespace:ResolutionsFlow.Presentation.Resources.Localization"
                 Title="ResolutionsFlow"
                 Width="1200" Height="760"
                 WindowStartupLocation="CenterScreen">

    <Grid>
        <ui:NavigationView x:Name="RootNavigation"
                           PaneDisplayMode="Left"
                           IsBackButtonVisible="Collapsed"
                           IsSettingsVisible="False">

            <!-- MENU -->
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="{loc:Loc Key=Nav_Dashboard}"
                                       Icon="{ui:SymbolIcon Home24}"
                                       Tag="Dashboard"/>
                <ui:NavigationViewItem Content="{loc:Loc Key=Nav_Documents}"
                                       Icon="{ui:SymbolIcon Document24}"
                                       Tag="Documents"/>
            </ui:NavigationView.MenuItems>

            <!-- FOOTER: theme + language -->
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem>
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <TextBlock VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Text="{loc:Loc Key=Theme_Label}"/>

                            <ToggleButton Width="140"
                                          Content="{loc:Loc Key=Theme_Toggle}"
                                          IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"/>
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem>
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <TextBlock VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Text="{loc:Loc Key=Language_Label}"/>

                            <ComboBox Width="140"
                                      SelectedValuePath="Tag"
                                      SelectedValue="{Binding SelectedCulture, Mode=TwoWay}">
                                <ComboBoxItem Content="Українська" Tag="uk-UA"/>
                                <ComboBoxItem Content="English" Tag="en-US"/>
                            </ComboBox>
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>

            <!-- CONTENT -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
