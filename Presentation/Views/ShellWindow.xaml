<ui:FluentWindow x:Class="ResolutionsFlow.Presentation.Views.ShellWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:loc="clr-namespace:ResolutionsFlow.Presentation.Resources.Localization"
                 Title="ResolutionsFlow"
                 Width="1200" Height="760"
                 WindowStartupLocation="CenterScreen">

    <Grid>
        <ui:NavigationView PaneDisplayMode="Left"
                           IsBackButtonVisible="Collapsed"
                           IsSettingsVisible="False">

            <!-- MENU -->
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="{loc:Loc Nav_Dashboard}"
                                       Icon="{ui:SymbolIcon Home24}"
                                       Command="{Binding NavigateDashboardCommand}" />

                <ui:NavigationViewItem Content="{loc:Loc Nav_Documents}"
                                       Icon="{ui:SymbolIcon Document24}"
                                       Command="{Binding NavigateDocumentsCommand}" />
            </ui:NavigationView.MenuItems>

            <!-- FOOTER -->
            <ui:NavigationView.FooterMenuItems>

                <ui:NavigationViewItem Content="{loc:Loc Nav_Settings}"
                                       Icon="{ui:SymbolIcon Settings24}"
                                       Command="{Binding NavigateSettingsCommand}" />

                <ui:NavigationViewItem Content="{loc:Loc Nav_About}"
                                       Icon="{ui:SymbolIcon Info24}"
                                       Command="{Binding NavigateAboutCommand}" />

                <!-- Theme toggle -->
                <ui:NavigationViewItem>
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <TextBlock VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Text="{loc:Loc Theme_Label}"/>

                            <ToggleButton Width="140"
                                          Content="{loc:Loc Theme_Toggle}"
                                          IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"/>
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>

                <!-- Language -->
                <ui:NavigationViewItem>
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <TextBlock VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Text="{loc:Loc Language_Label}"/>

                            <ComboBox Width="140"
                                      SelectedValuePath="Tag"
                                      SelectedValue="{Binding SelectedCulture, Mode=TwoWay}">
                                <ComboBoxItem Content="Українська" Tag="uk-UA"/>
                                <ComboBoxItem Content="English" Tag="en-US"/>
                            </ComboBox>
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>

            </ui:NavigationView.FooterMenuItems>

            <!-- CONTENT (показує CurrentViewModel через DataTemplates з App.xaml) -->
            <Border Padding="16">
                <ContentControl Content="{Binding Navigation.CurrentViewModel}" />
            </Border>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
